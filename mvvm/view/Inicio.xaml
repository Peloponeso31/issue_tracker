<UserControl x:Class="Comisión_Estatal_de_Búsqueda_del_Estado_de_Veracruz.mvvm.view.Inicio"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Comisión_Estatal_de_Búsqueda_del_Estado_de_Veracruz.mvvm.view"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="White" Padding="20" CornerRadius="10">

        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            
            <StackPanel>
                <TextBlock HorizontalAlignment="Center" Text="{Binding Numero}"/>
                <Button Content="Suma uno!" Command="{Binding AddRelayCommand}"/>

                <StackPanel Orientation="Horizontal">
                    <Button Content="Inicio" Command="{Binding MostrarInicio}"/>
                    <Button Content="Captura" Command="{Binding MostrarCaptura}"/>
                    
                </StackPanel>

                <ContentControl Content="{Binding CurrentSubView}"/>
            </StackPanel>
        </Grid>
        
    </Border>
</UserControl>
